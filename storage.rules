rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Chat files are readable by anyone but only writable by authenticated users.
    match /chat_files/{messageId}/{fileName} {
      allow read;
      allow write: if request.auth != null;
    }

    // Doubt attachments can be written by any authenticated user (students asking, teachers answering)
    // and are readable by anyone.
    match /doubt_attachments/{allPaths=**} {
        allow read;
        allow write: if request.auth != null;
    }
  }
}
